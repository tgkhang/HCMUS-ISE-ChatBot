<main
  class="d-flex align-items-center justify-content-center"
  style="min-height: 100vh; background: linear-gradient(to bottom, #888 50%, #000 50%);"
>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <!-- Card -->
        <div
          class="card shadow-lg border-0 rounded-4"
          style="background-color: #1b1b1b; color: #fff;"
        >
          <div class="card-body p-5">
            <!-- Title -->
            <h1
              class="text-center fw-bold mb-4"
              style="color: #6c63ff; font-size: 2rem;"
            >
              Chat Bot
            </h1>
            <!-- Form -->
            <form action="/login" method="POST">
              <!-- Email Field -->
              <div class="mb-4">
                <label for="username" class="form-label fs-6">Email address</label>
                <input
                  type="email"
                  class="form-control bg-dark text-light border-secondary"
                  id="username"
                  name="username"
                  placeholder="Email address"
                  required
                />
              </div>
              <!-- Password Field -->
              <div class="mb-4">
                <label for="password" class="form-label fs-6">Password</label>
                <input
                  type="password"
                  class="form-control bg-dark text-light border-secondary"
                  id="password"
                  name="password"
                  placeholder="Password"
                  required
                />
              </div>
              <!-- Submit Button -->
              <div class="d-grid">
                <button
                  type="submit"
                  class="btn btn-lg"
                  style="background-color: #6c63ff; border-color: #6c63ff; color: #fff;"
                >
                  Go
                </button>
              </div>
            </form>
          </div>
        </div>
        <!-- Links -->
        <div class="d-flex justify-content-between mt-4">
          <a href="/registerEmail" class="text-decoration-none" style="color: #6c63ff;">
            Sign up
          </a>
          <a href="/forgot" class="text-decoration-none" style="color: #6c63ff;">
            Forget password
          </a>
        </div>
      </div>
    </div>
  </div>
</main>
