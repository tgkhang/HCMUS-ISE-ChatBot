<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 sidebar bg-dark text-white p-3 min-vh-100">
        <h4 class="mb-4">AI Agents</h4>
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">Claude</a>
            <a href="/home/chatgpt" class="list-group-item list-group-item-action">ChatGPT</a>
            <a href="/home/gemini" class="list-group-item list-group-item-action">Gemini</a>
        </div>
        <div class="mt-auto pt-3">
            <a href="/" class="btn btn-outline-light w-100">Logout</a>
        </div>
    </div>

    <!-- Chat Area -->
    <div class="col-md-9 col-lg-10 p-0">
        <div class="chat-container d-flex flex-column" style="height: 100vh;">
            <!-- Chat Messages -->
            <div class="chat-messages flex-grow-1 p-3" id="chatMessages">
                <!-- Messages will be added here dynamically -->
            </div>

            <!-- Input Area -->
            <div class="chat-input p-3 border-top">
                <form id="chatForm" class="d-flex">
                    <input type="text" class="form-control me-2" id="userInput"
                        placeholder="Type your message...">
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>