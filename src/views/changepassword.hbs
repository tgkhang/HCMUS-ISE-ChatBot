<main
  class="d-flex align-items-center justify-content-center"
  style="min-height: 100vh; background: linear-gradient(to bottom, #888 50%, #000 50%);"
>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <!-- Card -->
        <div
          class="card shadow-lg border-0 rounded-4"
          style="background-color: #1b1b1b; color: #fff;"
        >
          <div class="card-body p-5">
            <!-- Title -->
            <h1
              class="text-center fw-bold mb-4"
              style="color: #6c63ff; font-size: 2rem;"
            >
              Reset Your Password
            </h1>

            {{#if done}}
              <p
                class="fs-5 text-center mt-3 mb-4 text-success"
                
              >
                Your password has been reset. You can now
                <a href="/login" style="color: #6c63ff;">log in</a>.
              </p>

              <div class="text-center mb-4">
                <i class="bi bi-check-circle-fill display-4 text-success"></i>
              </div>

            {{else if expired}}
              <p class="fs-5 text-center text-warning mt-3 mb-4 text-success">
                Your reset link has expired. Please request a new one. 
              </p>
              <div class="text-center mb-4">
                <i
                  class="bi bi-exclamation-triangle-fill display-4 text-warning"
                ></i>
              </div>
              <div class="d-grid">
                <a
                  href="/forgotPassword"
                  class="btn btn-lg"
                  style="background-color: #6c63ff; border-color: #6c63ff; color: #fff;"
                >
                  Request New Link
                </a>
              </div>

            {{else}}
              <p class="fs-5 text-center mt-3 mb-4 " >
                Create a new password for your account.
              </p>
              <div class="text-center mb-4">
                <i class="bi bi-key display-4" style="color: #6c63ff;"></i>
              </div>

              <!-- Form Section -->
              <form action="/reset" method="post" id="formReset">
                <div class="mb-3">
                  <label for="newPassword" class="form-label fs-6">New Password</label>
                  <input
                    type="password"
                    class="form-control bg-dark text-light border-secondary"
                    name="password"
                    id="newPassword"
                    placeholder="Enter new password"
                    aria-label="Enter new password"
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                    title="Must contain at least one number, one uppercase and lowercase letter, and at least 8 or more characters"
                    onchange="checkPasswordConfirm('formReset')"
                    required
                  />
                </div>
                <div class="mb-4">
                  <label for="confirmPassword" class="form-label fs-6">Confirm
                    Password</label>
                  <input
                    type="password"
                    class="form-control bg-dark text-light border-secondary"
                    name="confirmPassword"
                    id="confirmPassword"
                    placeholder="Confirm new password"
                    aria-label="Confirm new password"
                    onkeyup="checkPasswordConfirm('formReset')"
                    required
                  />
                </div>

                <input type="hidden" name="email" value="{{email}}" />
                <input type="hidden" name="token" value="{{token}}" />

                <!-- Submit Button -->
                <div class="d-grid">
                  <button
                    type="submit"
                    class="btn btn-lg"
                    style="background-color: #6c63ff; border-color: #6c63ff; color: #fff;"
                  >
                    Reset Password
                  </button>
                </div>

                {{#if message}}
                  <div class="alert alert-warning mt-3">
                    {{{message}}}
                  </div>
                {{/if}}
              </form>
            {{/if}}
          </div>
        </div>

        <!-- Back to Login -->
        <div class="text-center mt-4">
          <a href="/login" class="text-decoration-none" style="color: #6c63ff;">
            Back to Login
          </a>
        </div>
      </div>
    </div>
  </div>
</main>