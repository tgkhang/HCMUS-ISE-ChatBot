<main
  class="d-flex align-items-center justify-content-center"
  style="min-height: 100vh; background: linear-gradient(to bottom, #888 50%, #000 50%);"
>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <!-- Card -->
        <div
          class="card shadow-lg border-0 rounded-4"
          style="background-color: #1b1b1b; color: #fff;"
        >
          <div class="card-body p-5">
            <!-- Title -->
            <h1
              class="text-center fw-bold mb-4"
              style="color: #6c63ff; font-size: 2rem;"
            >
              Forgot Your Password?
            </h1>
            <!-- Message -->
            {{#if done}}
            <p class="fs-5 text-center text-success">
              An email has been sent. Please check your inbox.
            </p>
            {{else}}
            <p class="fs-5 text-center text-light">
              Enter your email to begin the password reset process.
            </p>
            <!-- Icon -->
            <div class="text-center mb-4">
              <i class="bi bi-person-lock display-4" style="color: #6c63ff;"></i>
            </div>

            <!-- Form -->
            <form action="/forgot" method="post" id="formForgot">
              <!-- Email Field -->
              <div class="mb-4">
                <label for="formId1" class="form-label fs-6">Email address</label>
                <input
                  type="email"
                  class="form-control bg-dark text-light border-secondary"
                  name="email"
                  id="formId1"
                  placeholder="Enter email"
                  aria-label="Enter email"
                  pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
                  required
                />
              </div>
              <!-- Submit Button -->
              <div class="d-grid">
                <button
                  type="submit"
                  class="btn btn-lg"
                  style="background-color: #6c63ff; border-color: #6c63ff; color: #fff;"
                >
                  Send Reset Link
                </button>
              </div>
              <!-- Error Message -->
              {{#if message}}
              <div class="alert alert-warning mt-3">
                {{{message}}}
              </div>
              {{/if}}
            </form>
            {{/if}}
          </div>
        </div>
        <!-- Back to Login -->
        <div class="text-center mt-4">
          <a href="/login" class="text-decoration-none" style="color: #6c63ff;">
            Back to Login
          </a>
        </div>
      </div>
    </div>
  </div>
</main>
